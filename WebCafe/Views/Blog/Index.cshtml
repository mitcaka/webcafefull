@model List<WebCafe.Models.TinTuc>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-20 display-md-18 display-lg-16">Tất cả Blog</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-2-6">
                    <article class="card card-style2" data-aos="fade-up">
                        <div class="card-img">
                            <img class="rounded-top" src="~/Upload/tintuc/@item.HinhAnh">
                            @*<div class="date">@item.NgayViet</div>*@
                        </div>
                        <div class="card-body">
                            <h3 class="h5"><a href="~/Blog/BlogDetail/@item.MaTin">@item.TieuDe</a></h3>
                            <p class="display-30 text-truncate">@item.DanhMuc.TenDanhMuc</p>
                            <a href="~/Blog/BlogDetail/@item.MaTin" class="read-more">Đọc tiếp</a>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>
